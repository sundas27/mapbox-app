// tsconfig.server.json
{
    "include": ["server/**/*.ts"], // Specified Customized Server settings to include all files and folder undr server folder.
    "compilerOptions": {
      "module": "commonjs",
      "outDir": "dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "lib": ["es6", "dom"],
      "target": "es6",
      "jsx": "react",
      "allowJs": true,
      "strict": true,
      "strictNullChecks": true,
      "noImplicitAny": true
    }
  }